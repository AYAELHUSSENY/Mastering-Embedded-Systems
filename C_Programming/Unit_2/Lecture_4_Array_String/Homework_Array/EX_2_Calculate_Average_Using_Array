#include"stdio.h"
//C program to calculate average using arrays
void main()
{
    int NumberOfData;
    float data[100];
    float sum= 0 ;
    printf("Enter the number of data:");
    scanf("%d",&NumberOfData);
    for(int i = 0 ; i < NumberOfData ; i++)
    {
        printf("%d. Enter number:",i+1);
        scanf("%f",&data[i]);
        sum += data[i];
    }
    printf("Average = %.2f",sum/NumberOfData);
}
